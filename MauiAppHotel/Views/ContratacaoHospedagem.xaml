<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="AntiqueWhite">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        <Label Text="Cáculo da Diária"
               FontAttributes="Bold"
               FontFamily="Lobster"
               FontSize="50"
               TextColor="Firebrick"/>
        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="Firebrick"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"/>
                    
                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="Firebrick"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                           x:Name="stp_criancas"
                           Minimum="0"
                           Maximum="10"
                           Increment="1" />
                </Grid>

                <Label Text="Escolha sua Suíte"/>

                <Picker x:Name="pck_quarto"
                        Title="Selecione Sua Acomodação"
                        ItemDisplayBinding="{Binding Descricao}"/>

                <Frame Padding="10"
                       Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia"/>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in:"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/mm/yyyy"/>
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-out:"/>
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/mm/yyyy"/>
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                    
                </Frame>

                <Button Text="Avançar" Clicked="Button_Clicked" BackgroundColor="Brown" BorderColor="Black" BorderWidth="5"/>

                <HorizontalStackLayout>
                <Button HorizontalOptions="Start" FontSize="10" Margin="20" Text="Consultar Preços" Clicked="Button_Clicked_1" BackgroundColor="Brown" BorderColor="Black" BorderWidth="5"/>
                    <Button HorizontalOptions="Center" FontSize="10" Margin="20" Text="Sobre" Clicked="Button_Clicked_2" BackgroundColor="Brown" BorderColor="Black" BorderWidth="5"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
    
</ContentPage>