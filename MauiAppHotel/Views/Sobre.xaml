             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="AntiqueWhite">
    <VerticalStackLayout VerticalOptions="Start"
                         Padding="10">
        <Label Text="Sobre o Desenvolvedor"
               FontFamily="Lobster"
               FontSize="50"
               TextColor="Firebrick"/>
        <Label Padding="15" Margin="10"
            Text="Desenvolvido por: Luan Loureiro
               Estudante de Desenvolvimento de sistemas"
               TextColor="Goldenrod"
               VerticalOptions="Center" 
               HorizontalOptions="StartAndExpand" />

        <Label Text="Desenvolvido em 11/2025"
               TextColor="Brown"
               VerticalOptions="End"
               HorizontalOptions="End"/>

        <Button Text="Voltar" Clicked="Button_Clicked" BackgroundColor="Brown" BorderColor="Black" BorderWidth="5" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>