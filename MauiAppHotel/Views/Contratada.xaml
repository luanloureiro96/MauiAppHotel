<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Contratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="AntiqueWhite">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="Firebrick"
               FontFamily="Lobster"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <StackLayout Orientation="Horizontal">
            
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos:  " />
                    <Label Text="{Binding QntAdultos}"
                           TextColor="Firebrick"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="CrianÃ§as:  " />
                    <Label Text="{Binding QntCriancas}"
                           TextColor="Firebrick"/>
                </HorizontalStackLayout>
                
            </StackLayout>
        </Frame>

        <Frame Margin="10">

            <Grid ColumnDefinitions="* ,*, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-In:"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-Out:"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyy}'}"
                       TextColor="Firebrick"/>
                
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyy}'}"
                       TextColor="Firebrick"/>
                
                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia}"
                       TextColor="Firebrick"/>

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor Total: "/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}}"
                       TextColor="Firebrick"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" HorizontalOptions="Center"
                Clicked="Button_Clicked" BackgroundColor="Brown" BorderColor="Black" BorderWidth="5"/>
        
    </VerticalStackLayout>
    
</ContentPage>